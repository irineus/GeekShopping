@model IEnumerable<GeekShopping.Web.Models.ProductModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de produtos</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>
                Criar um novo produto
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="ProductUpdate" asp-route-id="@item.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>
                            Editar
                        </a>
                        <a asp-action="ProductDelete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>