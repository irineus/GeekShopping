@model GeekShopping.Web.Models.ProductViewModel



<form asp-action="ProductDelete">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Excluir Produto</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" type="text" disabled="disabled" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" disabled class="form-control" rows="5"></textarea>
            </div>
            <div class="col-2">
                <label asp-for="CategoryName" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="ImageURL" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageURL" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn btn-primary btn form-control">Voltar para a lista</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Excluir" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
